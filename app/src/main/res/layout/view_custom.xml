<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/layout_vertical_margin"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/layout_vertical_margin">

        <com.example.pk.metcast.custom_views.CustomTextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="left"
            android:textColor="@color/text_view"
            android:layout_marginLeft="@dimen/date_horizontal_margin">
        </com.example.pk.metcast.custom_views.CustomTextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_image"
            android:layout_marginLeft="@dimen/time_image_horizontal_margin"
            android:contentDescription="@string/time_image"
            android:layout_gravity="left" />

        <com.example.pk.metcast.custom_views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:layout_marginLeft="@dimen/time_horizontal_margin"
            android:textSize="18sp"
            android:layout_gravity="left"
            android:textColor="@color/text_view" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/layout_vertical_margin"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/layout_vertical_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weather_image"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/weather_image" />

        <com.example.pk.metcast.custom_views.CustomTextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="right"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_view">
        </com.example.pk.metcast.custom_views.CustomTextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/layout_vertical_margin"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/layout_vertical_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temperature_image"
            android:layout_marginRight="@dimen/temperature_image_horizontal_margin"
            android:layout_gravity="right"
            android:contentDescription="@string/temperature_image"
            android:src="@drawable/temp_term" />

        <com.example.pk.metcast.custom_views.CustomTextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginRight="@dimen/temperature_horizontal_margin"
            android:textColor="@color/text_view"
            android:layout_gravity="right">
        </com.example.pk.metcast.custom_views.CustomTextView>

    </LinearLayout>

</LinearLayout>


